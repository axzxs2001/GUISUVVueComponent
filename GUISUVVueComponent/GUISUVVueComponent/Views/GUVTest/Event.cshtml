
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>基础</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/vue/dist/vue.js"></script>
</head>
<body>
    <div class="container">
        <hr style="border:1px red solid;" />
        <div class="row" id="example-1">
            <button v-on:click="message+=1">增加1</button>
            <p>Message is: {{message}}</p>
        </div>
        <hr style="border:1px red solid;" />
        <div class="row" id="example-2">
            <input v-on:keyup.enter="sava(this)" class="
                  form-control" placeholder="密码" v-model="txtValue"  />
            <p>{{message}}</p>
        </div>
        <hr style="border:1px red solid;" />

        <hr style="border:1px red solid;" />

        <hr style="border:1px red solid;" />

        <hr style="border:1px red solid;" />

        <hr style="border:1px red solid;" />
    </div>
    <script>
        var app1 = new Vue({
            el: "#example-1",
            data: {
                message: 1
            }
        });

        var app2 = new Vue({
            el: "#example-2",
            data: {
                txtValue: "",
                message:""
            },
            methods: {
                sava: function () {
                    this.message = "文本的值： " + this.txtValue;
                }
            }
        });

    </script>
</body>
</html>
